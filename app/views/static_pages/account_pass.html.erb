<% provide(:title, 'アカウント管理') %>
<h1>本人用パスワード修正</h1>
<p>
<form class="form-horizontal">
    <fieldset>
        <div class="control-group">
            <label class="control-label" for="input01">現在のパスワード</label>
            <div class="controls">
                <input type="password" class="input-xlarge" id="pass_old">
            </div>
        </div>
        <div class="control-group">
            <label class="control-label" for="input01">新しいパスワード</label>
            <div class="controls">
                <input type="password" class="input-xlarge" id="pass_new">
            </div>
        </div>
        <div class="control-group">
            <label class="control-label" for="input01">新しいパスワード(確認用)</label>
            <div class="controls">
                <input type="password" class="input-xlarge" id="pass_new2">
            </div>
        </div>
    	<div class="form-actions">
	        <button type="submit" class="btn">確認</button>
		</div>
    </fieldset>
</form>
</p>

